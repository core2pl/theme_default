{% if action == 'welcome' %}
    <div class="fleft">
        <h1>core2.pl</h1>
        <h2>Instalacja systemu</h2>
        <ul class="nav">
            <li>
                <a href="/install/database" class="btn btn-success">Przejdź dalej</a>
            </li>
        </ul>
    </div>
    <div class="fright">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">Uwaga!</h3>
            </div>
            <div class="panel-body">
                Instalacja tylko dla zaawansowanych użytkowników!
            </div>
        </div>
    </div>
{% endif %}
{% if action == 'database' %}
    <div class="well">
        <form class="bs-example form-horizontal" action="/install/addones">
            <fieldset>
                <legend>Konfiguracja bazy danych (krok 1 z 3)</legend>
                <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Rodzaj bazy dancyh:</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="select">
                            <option>MySQL</option>
                            <option>SQLite</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Host:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="localhost">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Użytkownik:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-lg-2 control-label">Hasło:</label>
                    <div class="col-lg-10">
                        <input type="passwor" class="form-control" id="inputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Baza danych:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">

                        <button type="submit" class="btn btn-success">Przejdź dalej</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endif %}
{% if action == 'addones' %}
    <div class="well">
        <form class="bs-example form-horizontal" action="/install/user">
            <fieldset>
                <legend>Motywy i moduły (krok 2 z 3)</legend>
                <div class="form-group">
                    <label for="select" class="col-lg-2 control-label">Motyw:</label>
                    <div class="col-lg-10">
                        <select class="form-control" id="select">
                            <option>Domyślny</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Przejdź dalej</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endif %}
{% if action == 'user' %}
    <div class="well">
        <form class="bs-example form-horizontal" action="/install/summary">
            <fieldset>
                <legend>Administrator (krok 3 z 3)</legend>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">E-mail:</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPssword" class="col-lg-2 control-label">Hasło:</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="inputEmail" placeholder="">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Przejdź dalej</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
{% endif %}
{% if action == 'summary' %}
    <div class="well">
        <form class="bs-example form-horizontal" action="/install/summary">
            <fieldset>
                <legend>Podsumowanie</legend>
            </fieldset>
        </form>
    </div>
{% endif %}